{{> header}}
    <body class="login">
        <div class="main-wrapper">
            <div class="page-content for-window-height d-flex align-items-center justify-content-center">
                <div>
                    <div class="list">
                        <div class="back-btn">
                            <a href="/" class="back link">
                                <i class=" feather-arrow-left"></i>
                            </a>
                        </div>
                        <form method="POST" id="login-form">
                            <div class="login-inner-col">
                                <div class="top-title">
                                    <div>
                                        <h3>Connexion</h3>
                                        <h6>Veuillez vous connecter</h6>
                                    </div>
                                </div>
                                <ul class="pt-5">
                                    <li>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Adress email">
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Môt de passe">
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group">
                                            <button type="submit" form="login-form" class="btn btn-submit btn-primary w-100">
                                                Se connecter
                                            </button>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group forgot-password">
                                            <a href="#">Môt de passe oublié ?</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
{{> footer}}