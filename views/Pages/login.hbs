{{> header}}
    <body class="login">
        <div class="main-wrapper">
            <div class="page-content for-window-height d-flex align-items-center justify-content-center">
                <div>
                    <div class="list">
                        <div class="back-btn">
                            <a href="/" class="back link">
                                <i class=" feather-arrow-left"></i>
                            </a>
                        </div>
                        <form method="POST" id="login-form">
                            <div class="login-inner-col">
                                <div class="top-title">
                                    <div>
                                        <h3>Connexion</h3>
                                        <h6>Veuillez vous connecter</h6>
                                    </div>
                                </div>
                                <div id="message-alert"></div>
                                <ul class="pt-5">
                                    <li>
                                        <div class="form-group">
                                            <input 
                                                type="text" 
                                                class="form-control" 
                                                placeholder="Numéro de téléphone"
                                                name="phone">
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group">
                                            <input 
                                                type="password" 
                                                class="form-control" 
                                                placeholder="Môt de passe"
                                                name="password">
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group">
                                            <button id="login-form-btn" type="submit" form="login-form" class="btn btn-submit btn-primary w-100">
                                                Se connecter
                                            </button>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
{{> scripts}}